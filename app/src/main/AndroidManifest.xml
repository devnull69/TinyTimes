<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.theiner.tinytimes">

    <application
        android:name=".context.TinyTimesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.EintragActivity"
            android:screenOrientation="portrait"
            android:label="@string/stunden_erfassen">
        </activity>
        <activity android:name=".activities.OptionActivity"
            android:screenOrientation="portrait"
            android:label="@string/optionen">
        </activity>
    </application>

</manifest>